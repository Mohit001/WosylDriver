<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:background="@color/user_background"
              android:layout_width="match_parent"
                android:padding="@dimen/dimn10"
              android:layout_height="match_parent">

    <ImageView
        android:id="@+id/user_pending_listview_raw_image"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_user_back"/>

    <TextView
        android:id="@+id/user_pending_listview_raw_count_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/user_pending_listview_raw_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/user_pending_listview_raw_orderid_content"
        android:textSize="18sp"
        android:text="orderid"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginRight="@dimen/dimn10"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/user_pending_listview_raw_count_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>