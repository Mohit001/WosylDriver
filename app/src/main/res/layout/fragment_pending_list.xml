<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:background="@color/user_background"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

        <TextView
            android:id="@+id/user_pending_lbl"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_marginTop="@dimen/dimn14"
            android:text="Pending"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/divider1"
        android:layout_marginTop="@dimen/dimn14"
        android:layout_below="@id/user_pending_lbl"
        android:background="@color/text_lite_grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ListView
        android:layout_below="@id/divider1"
        android:divider="@color/text_lite_grey"
        android:dividerHeight="1dp"
        android:id="@+id/user_pending_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/divider2"
        android:layout_marginTop="@dimen/dimn14"
        android:layout_below="@id/user_pending_listview"
        android:background="@color/text_lite_grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>