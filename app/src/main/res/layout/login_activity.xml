<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/user_background"
              android:weightSum="10"
              android:orientation="vertical"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/logo_ll"
        android:layout_width="match_parent"
        android:layout_weight="6"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_height="match_parent">

        <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/app_name"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_ll"
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/dimn22"
        android:paddingLeft="@dimen/dimn18"
        android:paddingRight="@dimen/dimn18"
        android:gravity="bottom"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/login_email_txt"
            android:layout_width="match_parent"
            android:inputType="textEmailAddress"
            android:hint="Username"
            android:textColorHint="@android:color/white"
            android:textStyle="bold"
            android:singleLine="true"
            android:drawableLeft="@drawable/ic_name_left"
            android:background="@drawable/input_round_corner"
            android:layout_marginTop="@dimen/dimn14"
            android:layout_height="48dp"/>

        <EditText
            android:id="@+id/login_password_txt"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:textColorHint="@android:color/white"
            android:textStyle="bold"
            android:singleLine="true"
            android:drawableLeft="@drawable/ic_action_lock_outline"
            android:background="@drawable/input_round_corner"
            android:layout_marginTop="@dimen/dimn14"
            android:layout_height="48dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/login_btn"
            android:background="@drawable/blue_round_corner_solid"
            android:text="Start Driving"
            android:layout_marginTop="@dimen/dimn18"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginBottom="@dimen/dimn22"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/create_account"
                android:text="Create Account"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@color/text_lite_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/need_help"
                android:text="Need Help?"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/text_lite_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>